---
import type { CollectionEntry } from 'astro:content';
import { getTimeAgo, getReadTime } from '../utils/blogUtils';

interface Props {
project: CollectionEntry<'projects'> | CollectionEntry<'blogs'>;
}

const { project } = Astro.props;
const { data, id, collection, body } = project;

// Generate Metrics
const timeAgo = getTimeAgo(data.publishDate);
const readTime = getReadTime(body);
---

<a class="card" href={`/${collection}/${id}`}>
  <div class="image-container">
    <img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
  </div>

  <div class="overlay">
    <div class="meta-row">
      <span class="meta-text">{timeAgo}</span>
      <span class="dot">•</span>
      <span class="meta-text">{readTime}</span>
    </div>
    <h3 class="title">{data.title}</h3>
  </div>
</a>

<style>
  /* MAIN CARD CONTAINER */
  .card {
    display: block;
    position: relative;
    height: 22rem;
    background: var(--gray-999);
    border: 1px solid var(--gray-800);
    border-radius: 1.5rem;
    overflow: hidden;
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  /* IMAGE STYLES */
  .image-container {
    width: 100%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  /* Zoom image slightly on hover */
  .card:hover img {
    transform: scale(1.05);
  }

  /* CONTENT OVERLAY (The Gradient) */
  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 2rem 1.5rem 1.5rem;

    /* Gradient: Transparent at top -> Dark Black at bottom */
    background: linear-gradient(
      to bottom, 
      transparent 0%, 
      rgba(0, 0, 0, 0.6) 20%, 
      rgba(0, 0, 0, 0.9) 100%
        );

        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        gap: 0.5rem;
  }

  /* METADATA (Date • Read Time) */
  .meta-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--text-sm);
    color: var(--gray-300);
    font-family: var(--font-brand);
    opacity: 0.9;
  }

  .dot {
    color: var(--accent-regular);
    font-weight: bold;
  }

  /* TITLE */
  .title {
    font-size: 1.5rem; /* Large size */
    line-height: 1.2;
    color: var(--gray-0); /* Pure white */
    font-family: var(--font-brand);
    font-weight: 600;
    margin: 0;
    text-wrap: balance; /* Prevents orphaned words */
  }

  /* MOBILE ADJUSTMENTS */
  @media (max-width: 50em) {
    .card {
      height: 18rem; /* Slightly shorter on mobile */
    }
    .title {
      font-size: 1.25rem;
    }
  }
</style>
