---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import TagFilter from '../components/TagFilter.astro';

const projects = (await getCollection('projects')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
const uniqueTags = [
	...new Set(projects.map((project) => project.data.tags).flat()),
];
---

<BaseLayout
	title="My Projects | Sai Sree Kartheek Adivi"
	description="Learn about Kartheek's most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="My Projects"
				tagline="See my most recent projects below to get an idea of my past experience."
				align="start"
			/>
      <TagFilter tags={uniqueTags} />
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li class="filterable-item" data-tags={project.data.tags.join(' ')}>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
